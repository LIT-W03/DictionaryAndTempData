@using WebApplication1.Models
@model HomePageViewModel

<html>

<head>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' />
    
</head>
<body>
    <div class="container">
        <div class="row">
            <form>
                <input value="@Model.SearchText" type="text" class="form-control" placeholder="Enter Text" name="text"/>
                <br/>
                <button class="btn btn-lg btn-primary">Submit</button>
            </form>
        </div>
        
        @if (Model.CharacterCounts != null)
        {
            foreach (KeyValuePair<char, int> counts in Model.CharacterCounts)
            {
                <h2>There are @counts.Value @counts.Key's</h2>
            }
        }
    </div>
</body>
</html>